<!--        android:paddingStart="10dp"-->
<!--        android:layout_margin="10dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->
    <EditText
        android:id="@+id/edDateOfBirth"
        android:textSize="23sp"
        android:hint="nhập ngày sinh"
        android:paddingStart="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>